{
  // Use the AirBnB JS styleguide - https://github.com/airbnb/javascript
  "parser": "babel-eslint",
  "plugins": [
    "react",
    "react-native"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "airbnb"
  ],
  "rules": {
    "semi": "off",
    "react/jsx-filename-extension": "off",
    "no-use-before-define": "off",
    "react/prefer-stateless-function": "off",
    "no-tabs": "off",
    "no-undef": "off"
  }
}